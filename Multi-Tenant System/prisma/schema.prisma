// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Using SQLite for local development
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// MODELS (NO ENUMS â€“ string-based instead)
// ============================================

/// Tenant model - represents an organization/company
model Tenant {
  id        String   @id @default(uuid())
  name      String
  /// "FREE" or "PRO"
  plan      String   @default("FREE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users        User[]
  materials    Material[]
  transactions Transaction[]

  @@map("tenants")
}

/// User model - belongs to a tenant
model User {
  id        String   @id @default(uuid())
  tenantId  String
  email     String
  name      String
  /// "ADMIN" or "USER"
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // Indexes
  @@unique([tenantId, email]) // Email unique per tenant, not globally
  @@index([tenantId])
  @@map("users")
}

/// Material model - inventory items belonging to a tenant
model Material {
  id           String    @id @default(uuid())
  tenantId     String
  name         String
  unit         String    // e.g., "kg", "litre", "pcs"
  currentStock Int       @default(0)
  deletedAt    DateTime? // Soft delete support
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  // Indexes
  @@index([tenantId])
  @@index([tenantId, deletedAt]) // For filtering active materials per tenant
  @@map("materials")
}

/// Transaction model - tracks stock in/out movements
model Transaction {
  id         String   @id @default(uuid())
  tenantId   String
  materialId String
  /// "IN" or "OUT"
  type       String
  quantity   Int
  createdAt  DateTime @default(now())

  // Relations
  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  material Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([tenantId])
  @@index([materialId])
  @@index([tenantId, createdAt]) // For querying tenant transactions by date
  @@map("transactions")
}
